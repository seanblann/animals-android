<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="@dimen/half_static_spacing"
  android:background="@color/white"
  tools:context=".controller.MainActivity">
<Spinner
    android:id="@+id/animal_selector"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/AnimalSpinner"
    android:text="Trespassers Will Be Shot!"
    android:layout_margin="@dimen/half_static_spacing"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <ImageView
    android:id="@+id/image"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/half_static_spacing"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/animal_selector"
    android:contentDescription="@string/image_description_placeholder"
    />

</androidx.constraintlayout.widget.ConstraintLayout>